<?xml version="1.0" encoding="utf-8"?>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:padding="8dp">

    <ImageView
        android:id="@+id/img_morty"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_width="90dp"
        android:layout_height="25dp"
        android:layout_marginBottom="0dp"
        tools:srcCompat="@tools:sample/avatars"
        />

    <TextView
        android:id="@+id/item_name_Morty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="8dp"
        android:layout_toLeftOf="@+id/img_morty"
        android:layout_toEndOf="@+id/img_morty"
        android:text="TextView"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/item_spesies"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_name_Morty"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/img_morty"
        android:layout_toRightOf="@+id/img_morty"
        android:ellipsize="end"
        android:maxLines="5"
        android:text="Spesies:Human"/>

    <TextView
        android:id="@+id/item_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_spesies"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_toEndOf="@+id/img_morty"
        android:layout_toRightOf="@+id/img_morty"
        android:ellipsize="end"
        android:layout_marginTop="10dp"
        android:maxLines="5"
        android:text="Alive"/>


</RelativeLayout>



